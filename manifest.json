{
  "name": "Remove Premium Placeholders",
  "version": "1.0",
  "description": "Remove Premium Placeholders from some news web sites",
  "permissions": [
    "activeTab"
  ],
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  },
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [
        "https://observador.pt/*"
      ],
      "js": [
        "rm_placeholders.js"
      ]
    }
  ]
}
